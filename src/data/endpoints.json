[
  {
    "method": "GET",
    "path": "/api/customers",
    "description": "Retrieve all customers",
    "example": {
      "curl": "curl -X GET http://localhost:8080/api/customers \\\n  -H \"Content-Type: application/json\"",
      "response": "{\n  \"data\": [\n    { \"id\": 1, \"firstName\": \"John\", \"lastName\": \"Doe\", \"email\": \"john@example.com\" }\n  ],\n  \"total\": 1\n}"
    }
  },
  {
    "method": "POST",
    "path": "/api/customers",
    "description": "Create a new customer",
    "example": {
      "curl": "curl -X POST http://localhost:8080/api/customers \\\n  -H \"Content-Type: application/json\" \\\n  -d '{ \"firstName\": \"John\", \"lastName\": \"Doe\", \"email\": \"john@example.com\" }'",
      "response": "{\n  \"success\": true,\n  \"data\": { \"id\": 1, \"firstName\": \"John\", \"lastName\": \"Doe\", \"email\": \"john@example.com\" }\n}"
    }
  },
  {
    "method": "POST",
    "path": "/api/customers/batch",
    "description": "Create multiple customers in bulk",
    "example": {
      "curl": "curl -X POST http://localhost:8080/api/customers/batch \\\n  -H \"Content-Type: application/json\" \\\n  -d '[{ \"firstName\": \"Amit\", \"lastName\": \"Kumar\" }, { \"firstName\": \"Neha\", \"lastName\": \"Sharma\" }]'",
      "response": "{\n  \"success\": true,\n  \"message\": \"Batch inserted successfully\",\n  \"count\": 2\n}"
    }
  },
  {
    "method": "PATCH",
    "path": "/api/customers/batch",
    "description": "Update multiple customers in bulk",
    "badge": "New",
    "example": {
      "curl": "curl -X PATCH http://localhost:8080/api/customers/batch \\\n  -H \"Content-Type: application/json\" \\\n  -d '[{ \"id\": 1, \"firstName\": \"Updated\" }]'",
      "response": "{\n  \"success\": true,\n  \"message\": \"Batch update successful\",\n  \"count\": 1\n}"
    }
  },
  {
    "method": "DELETE",
    "path": "/api/customers/batch",
    "description": "Delete multiple customers in bulk",
    "example": {
      "curl": "curl -X DELETE http://localhost:8080/api/customers/batch \\\n  -H \"Content-Type: application/json\" \\\n  -d '[1, 2, 3]'",
      "response": "{\n  \"success\": true,\n  \"message\": \"Batch delete successful\",\n  \"deletedCount\": 3\n}"
    }
  },
  {
    "method": "DELETE",
    "path": "/api/customers/batch/force",
    "description": "Force delete multiple customers in bulk (bypasses soft delete)",
    "example": {
      "curl": "curl -X DELETE http://localhost:8080/api/customers/batch/force \\\n  -H \"Content-Type: application/json\" \\\n  -d '[1, 2, 3]'",
      "response": "{\n  \"success\": true,\n  \"message\": \"Force delete successful\"\n}"
    }
  },
  {
    "method": "GET",
    "path": "/api/customers/{id}",
    "description": "Retrieve a customer by ID",
    "example": {
      "curl": "curl -X GET http://localhost:8080/api/customers/1 \\\n  -H \"Content-Type: application/json\"",
      "response": "{\n  \"data\": { \"id\": 1, \"firstName\": \"John\", \"lastName\": \"Doe\", \"email\": \"john@example.com\" }\n}"
    }
  },
  {
    "method": "PATCH",
    "path": "/api/customers/{id}",
    "description": "Update a customer by ID",
    "example": {
      "curl": "curl -X PATCH http://localhost:8080/api/customers/1 \\\n  -H \"Content-Type: application/json\" \\\n  -d '{ \"email\": \"newjohn@example.com\" }'",
      "response": "{\n  \"success\": true,\n  \"data\": { \"id\": 1, \"email\": \"newjohn@example.com\" }\n}"
    }
  },
  {
    "method": "DELETE",
    "path": "/api/customers/{id}",
    "description": "Delete a customer by ID",
    "example": {
      "curl": "curl -X DELETE http://localhost:8080/api/customers/1 \\\n  -H \"Content-Type: application/json\"",
      "response": "{\n  \"success\": true,\n  \"message\": \"Customer deleted successfully\"\n}"
    }
  },
  {
    "method": "GET",
    "path": "/api/customers/paged",
